<odoo>
  <template id="customized_footer_copy" inherit_id="website.layout" name="Footer Copyright">
    <xpath expr="//footer" position="replace">
      <footer class="s_text_block pb8">
        <div class="row" style="margin-left: 0; margin-right: 0; background-color: #ff5722">
            <div class="col-md-12">
                <div class="newsletter">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="newsletter-title">
                                <h2>BULETTIN D'INFORMATION</h2>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="newsletter-form">
                                <form id="mc-form" class="mc-form" >
                                  <input id="mc-email" type="email" autocomplete="off" placeholder="Votre email..." />
                                  <button id="mc-submit" type="submit">S'inscrire</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Footer start -->
        <div class="footer ptb-100">
            <div class="footer-bg-opacity"></div>
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-sm-4 col-xs-6">
                        <div class="single-footer mt-0">
                            <div class="logo">
                                <img t-att-src="'/logo.png?company=%s' % res_company.id" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                            </div>
                            <div class="f-adress">
                                <p><span>Adresse:</span> Carrefour Djamboulani, derrière le lycée technique route antenne Orange.</p>
                            </div>
                            <div class="hotel-contact">
                                <p><span>Tél::</span> (+237) 675 882 167 / 699 538 389.</p>
                                <p><span>Email:</span>info@scif-immobilier.cm</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 hidden-sm col-xs-6">
                        <div class="single-footer">
                           <h3>Liens rapide</h3>
                           <div class="quick-item">
                                <ul>
                                   <li><a href="/">Acceuil</a></li>
                                   <li><a href="/gallery">Gallerie</a></li>
                                   <li><a href="/contact-us">Contacter-nous</a></li>
                                   <li><a href="/about-us">A propos</a></li>
                                </ul>
                           </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-4 col-xs-6">
                        <div class="single-footer">
                            <h3>Restez à l'écoute</h3>
                            <div class="get-touch">
                                <p>Enregistrez-vous à notre bulletin d'information</p>
                                <div class="get-conatct">
                                    <form action="/contact/send" method="post">
                                       <input type="text" placeholder="Votre nom" name="letter_name" required="true" />
                                       <input type="email" placeholder="Votre email" name="letter_email" required="true" />
                                       <button type="submit">Envoyer</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                     <div class="col-md-3 col-sm-4 col-xs-6">
                        <div class="single-footer">
                            <h3>instagram</h3>
                            <div class="instagram-post">
                                <div class="single-post">
                                    <a href="#"><img src="/scif_web_template/static/img/home/home_block2/pic1.jpg" alt="" /></a>
                                </div>
                                <div class="single-post">
                                    <a href="#"><img src="/scif_web_template/static/img/home/home_block2/pic2.jpg" alt="" /></a>
                                </div>
                                <div class="single-post">
                                    <a href="#"><img src="/scif_web_template/static/img/home/home_block2/pic3.jpg" alt="" /></a>
                                </div>
                                <div class="single-post">
                                    <a href="#"><img src="/scif_web_template/static/img/home/home_block2/pic4.jpg" alt="" /></a>
                                </div>
                                <div class="single-post">
                                    <a href="#"><img src="/scif_web_template/static/img/home/home_block2/pic5.jpg" alt="" /></a>
                                </div>
                                <div class="single-post">
                                    <a href="#"><img src="/scif_web_template/static/img/home/home_block2/pic6.jpg" alt="" /></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="copyright ptb-20 white_bg">
            <div class="container">
                <div class="row">
                    <div class="col-md-6 col-sm-8 col-xs-12">
                        <p>Copyright© EWONGA 2020.All Tous droits reservés.</p>
                    </div>
                    <div class="col-md-6 col-sm-4 col-xs-12">
                        <div class="footer-menu">
                            <!--ul>
                                <li><a href="#">Privacy policy</a></li>
                                <li><a href="#">Term of use</a></li>
                            </ul-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Footer end -->
      </footer>
    </xpath>
  </template>
</odoo>